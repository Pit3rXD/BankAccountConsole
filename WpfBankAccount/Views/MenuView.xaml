<UserControl x:Class="WpfBankAccount.Views.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfBankAccount.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,40,0,0" Width="250" Height="360">

            <TextBlock Text="Menu" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>


            <TextBlock FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,25">
                <Run Text="Welcome: "/>
                <Run Text="{Binding LoggedInAccount.Username, Mode=OneWay}"/>
            </TextBlock>

            <Button Content="Check balance" Margin="0,0,0,10" Height="40"/>
            <Button Content="Deposit" Margin="0,0,0,10" Height="40"/>
            <Button Content="Withdraw" Margin="0,0,0,10" Height="40"/>
            <Button Content="Transaction History" Margin="0,0,0,10" Height="40"/>
            <Button Content="Logout" Height="40"/>

        </StackPanel>
    </Grid>
</UserControl>
